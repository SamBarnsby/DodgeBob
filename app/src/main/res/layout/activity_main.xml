<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.example.samba.flappybird.MainActivity"
    android:weightSum="1">

    <com.q42.android.scrollingimageview.ScrollingImageView
        android:id="@+id/scrollingImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:speed="1dp"
        app:src="@drawable/backgroundgame"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo" />

    <ImageButton
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/boto1"
        android:layout_margin="@dimen/buton_border"/>
    <ImageButton
        android:id="@+id/scores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/boto2"
        android:layout_margin="@dimen/buton_border"/>
    <ImageButton
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/boto3"
        android:layout_margin="@dimen/buton_border" />
    <ImageButton
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/boto4"
        android:layout_margin="@dimen/buton_border"/>

</LinearLayout>
